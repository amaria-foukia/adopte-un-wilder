                                        <p class="mt-1">Experiences</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col mb-3">
                            <a href="{{ path('education_index') }}"  class="box-dashboard">
                                <div class="card mb-4 rounded-3 shadow-lg button-dashboard" id="button-education">
                                    <div class="card-body">
                                        <i class="fas fa-2x fa-plus mt-5"></i>
                                        <p class="mt-1">Formations</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col mb-3">
                            <a href="{{ path('project_index') }}"  class="box-dashboard">
                                <div class="card mb-4 rounded-3 shadow-lg button-dashboard" id="button-project">
                                    <div class="card-body">
                                        <i class="fas fa-2x fa-plus mt-5"></i>
                                        <p class="mt-1">Projets</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col mb-3">
                            <a href="{{ path('wilder_show', {slug: app.user.slug}) }}" class="box-dashboard">
                                <div class="card mb-4 rounded-3 shadow-lg button-dashboard bg-secondary" id="button-cv">
                                    <div class="card-body">
                                        <i class="fas fa-2x fa-eye mt-5"></i>
                                        <p class="mt-1">Mon CV</p>
                                    </div>
                                </div>
